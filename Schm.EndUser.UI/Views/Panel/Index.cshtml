@using Schm.Domain.Model
@using System.Globalization
@model List<Order>

<div class="dashboard-profile">
    <div class="container">
        <div class="address-bar">
            <ul class="box-address">
                <li class="item">
                    <a class="trs-3" href="#">
                        خانه
                        <i class="fal fa-chevron-left"></i>
                    </a>
                </li>
                <li class="item">
                    <a class="trs-3" href="#">
                        داشبورد کاربری
                        <i class="fal fa-chevron-left"></i>
                    </a>
                </li>
                <li class="item active">
                    <a class="trs-3" href="#">
                        پروفایل
                    </a>
                </li>
            </ul>
        </div>

        <div class="profile">
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div class="profile-content">
                        <div class="orders">

                            <div class="order-box">
                                <table>
                                    <tr class="title">
                                        <td>
                                            کد سفارش
                                        </td>
                                        <td>
                                            مبلغ فاکتور
                                        </td>
                                        <td>
                                            تاریخ سفارش
                                        </td>
                                        <td>
                                            وضعیت
                                        </td>
                                        <td>
                                            جزییات
                                        </td>
                                    </tr>
                                    @{
                                        foreach (var item in Model)
                                        {
                                            <tr class="item">
                                                <td>
                                                    <a class="trs-3" href="#">
                                                       @item.OrderNumber
                                                    </a>
                                                </td>
                                                <td>
                                                    @item.PayCost ریال
                                                </td>
                                                <td>
                                                    @{
                                                        var date = "";
                                                        PersianCalendar pc = new PersianCalendar();
                                                        date = string.Format("{0}/{1}/{2}", pc.GetYear(item.Date), pc.GetMonth(item.Date), pc.GetDayOfMonth(item.Date));
                                                }
                                                    @date
                                                </td>
                                                <td>
                                                   پرداخت شده
                                                </td>
                                                <td>
                                                    <a class="button trs-3" href="/Panel/Detail">
                                                        جزییات
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>